{
  "name": "slack-irc",
  "version": "3.6.1",
  "description": "Connects IRC and Slack channels by sending messages back and forth.",
  "keywords": [
    "slack",
    "irc",
    "gateway",
    "bot",
    "slack-irc"
  ],
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:ekmartin/slack-irc.git"
  },
  "bugs": {
    "url": "https://github.com/ekmartin/slack-irc/issues"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "babel lib --out-dir dist",
    "prepublish": "npm run build",
    "lint": "eslint . --ignore-path .gitignore",
    "coverage": "istanbul cover _mocha -- --compilers js:babel-core/register $(find test -name '*.test.js') && istanbul report cobertura",
    "test": "npm run lint && npm run coverage"
  },
  "author": {
    "name": "Martin Ek <mail@ekmartin.no>"
  },
  "license": "MIT",
  "dependencies": {
    "check-env": "~1.2.0",
    "commander": "~2.9.0",
    "irc": "~0.4.0",
    "lodash": "~3.10.1",
    "slack-client": "~1.5.0",
    "winston": "~2.1.1"
  },
  "devDependencies": {
    "babel-cli": "~6.2.0",
    "babel-core": "~6.2.1",
    "babel-eslint": "~5.0.0-beta4",
    "babel-preset-es2015": "~6.1.18",
    "babel-preset-stage-0": "~6.1.18",
    "chai": "~3.4.1",
    "eslint": "~1.10.2",
    "eslint-config-airbnb": "~1.0.2",
    "istanbul": "~0.4.1",
    "mocha": "~2.3.4",
    "sinon": "~1.17.2",
    "sinon-chai": "~2.8.0"
  }
}
